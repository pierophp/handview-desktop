{
  "name": "HandView",
  "version": "1.0.0",
  "description": "Cliente Desktop para o Hand View",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "clean": "rimraf dist",
    "clean:osx": "rimraf dist/HandView-darwin-x64",
    "clean:win": "rimraf dist/win",
    "pack": "build",
    "dist": "build",
    "release": "build",
    "dist:win64": "./node_modules/.bin/build --platform win32 --arch x64"
  },
  "keywords": [],
  "author": "Piero",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron-builder": "^3.6.1",
    "electron-prebuilt": "^0.37.0",
    "rimraf": "^2.5.2"
  },
  "dependencies": {
    "electron-window-manager": "^1.0.1"
  },
  "build": {
    "app-bundle-id": "org.handview",
    "app-category-type": "public.app-category.graphics-design",
    "iconUrl": "https://raw.githubusercontent.com/pierophp/handview-desktop/master/build/icon.ico",
    "osx": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
